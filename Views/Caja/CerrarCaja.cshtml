@model GestionVentas.Models.Caja

@{
    ViewData["Title"] = "Cierre de Caja";
    decimal totalEsperado = ViewBag.TotalEsperado;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center py-4">
                    <i class="fas fa-calculator fa-3x mb-3 text-warning"></i>
                    <h3 class="fw-bold mb-0">Arqueo y Cierre</h3>
                    <p class="mb-0 opacity-75">Finalización del Turno</p>
                </div>
                
                <div class="card-body p-4">
                    <div class="alert alert-secondary border-0 shadow-sm mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Monto de Apertura:</span>
                            <span class="fw-bold">$ @Model.MontoInicial.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2 text-primary">
                            <span>Ventas e Ingresos:</span>
                            <span class="fw-bold">+ $ @((totalEsperado - Model.MontoInicial >= 0 ? totalEsperado - Model.MontoInicial : 0).ToString("N2"))</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">Saldo Esperado:</span>
                            <span class="h5 mb-0 fw-bold text-dark">$ @totalEsperado.ToString("N2")</span>
                        </div>
                    </div>

                    <form asp-action="CerrarCaja" method="post" id="formCierre">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">Efectivo Real en Caja (Conteo Físico)</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-warning border-warning text-dark fw-bold">$</span>
                                <input type="number" 
                                       step="0.01" 
                                       id="montoFisicoReal" 
                                       name="montoFisicoReal" 
                                       class="form-control border-warning fw-bold" 
                                       placeholder="Ingrese el total contado" 
                                       oninput="calcularDiferencia(@totalEsperado)"
                                       required />
                            </div>
                        </div>

                        <div id="resultadoDiferencia" class="p-3 rounded mb-4 d-none">
                            <div class="d-flex justify-content-between align-items-center">
                                <span id="labelDiferencia">Diferencia:</span>
                                <span id="valorDiferencia" class="fw-bold h4 mb-0">$ 0.00</span>
                            </div>
                            <small id="mensajeDiferencia"></small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg">
                                <i class="fas fa-lock me-2"></i>CONFIRMAR CIERRE
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">
                                <i class="fas fa-chevron-left me-1"></i> Volver sin cerrar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function calcularDiferencia(esperado) {
            const real = parseFloat(document.getElementById('montoFisicoReal').value) || 0;
            const diferencia = real - esperado;
            const divResultado = document.getElementById('resultadoDiferencia');
            const valorSpan = document.getElementById('valorDiferencia');
            const mensaje = document.getElementById('mensajeDiferencia');

            divResultado.classList.remove('d-none', 'alert-success', 'alert-danger', 'alert-warning');
            
            if (Math.abs(diferencia) < 0.01) {
                divResultado.classList.add('alert-success');
                valorSpan.innerText = "$ 0.00";
                mensaje.innerText = "La caja cuadra perfectamente.";
            } else if (diferencia > 0) {
                divResultado.classList.add('alert-warning');
                valorSpan.innerText = "+ $ " + diferencia.toLocaleString('es-AR', {minimumFractionDigits: 2});
                mensaje.innerText = "Hay un SOBRANTE de dinero.";
            } else {
                divResultado.classList.add('alert-danger');
                valorSpan.innerText = "- $ " + Math.abs(diferencia).toLocaleString('es-AR', {minimumFractionDigits: 2});
                mensaje.innerText = "Hay un FALTANTE de dinero.";
            }
        }
    </script>
}