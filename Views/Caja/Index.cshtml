@model GestionVentas.Models.Caja

@{
    ViewData["Title"] = "Control de Caja";
    var movimientos = ViewBag.Movimientos as List<GestionVentas.Models.MovimientoCaja> ?? new
    List<GestionVentas.Models.MovimientoCaja>();

    // Traemos los valores calculados en el controlador
    decimal saldoActual = ViewBag.SaldoActual ?? 0;
    decimal totalEfectivo = ViewBag.TotalEfectivo ?? 0;
    decimal totalTransferencia = ViewBag.TotalTransferencia ?? 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-secondary mb-0"><i class="fas fa-cash-register me-2"></i>Gesti칩n de Caja</h2>
            <small class="text-muted">Ferreter칤a - Control Diario</small>
        </div>
        <div>
            @if (Model.EstaAbierta)
            {
                <span class="badge bg-success p-2 fs-6 shadow-sm"><i class="fas fa-check-circle me-1"></i> CAJA
                    ABIERTA</span>
            }
            else
            {
                <span class="badge bg-danger p-2 fs-6 shadow-sm"><i class="fas fa-times-circle me-1"></i> CAJA
                    CERRADA</span>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-dark text-white shadow-sm h-100 border-0">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase opacity-75 small fw-bold">Saldo Total Bruto</h6>
                    <h2 class="fw-bold mb-0">$ @saldoActual.ToString("N2")</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-0"
                style="background-color: #d1e7dd; border-left: 5px solid #198754 !important;">
                <div class="card-body text-center">
                    <h6 class="text-uppercase text-success small fw-bold">Efectivo en Caja</h6>
                    <h3 class="text-success fw-bold mb-0">$ @totalEfectivo.ToString("N2")</h3>

                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-0"
                style="background-color: #cfe2ff; border-left: 5px solid #0d6efd !important;">
                <div class="card-body text-center">
                    <h6 class="text-uppercase text-primary small fw-bold">Transferencias</h6>
                    <h3 class="text-primary fw-bold mb-0">$ @totalTransferencia.ToString("N2")</h3>

                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3 d-grid gap-2">
            <button class="btn btn-outline-success fw-bold btn-sm shadow-sm" data-bs-toggle="modal"
                data-bs-target="#modalIngreso">
                <i class="fas fa-plus-circle me-1"></i> NUEVO INGRESO
            </button>
            <button class="btn btn-outline-danger fw-bold btn-sm shadow-sm" data-bs-toggle="modal"
                data-bs-target="#modalEgreso">
                <i class="fas fa-minus-circle me-1"></i> NUEVO EGRESO
            </button>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3 border-bottom">
            <h5 class="mb-0 text-dark fw-bold"><i class="fas fa-list-ul me-2 text-primary"></i>Historial de Movimientos
            </h5>
            <div class="d-flex align-items-center">
                <span class="text-muted small me-3">Apertura: @Model.FechaApertura.ToString("dd/MM/yyyy HH:mm")</span>
                @if (Model.EstaAbierta)
                {
                    <a asp-action="CerrarCaja" class="btn btn-warning btn-sm fw-bold shadow-sm">
                        <i class="fas fa-lock me-1"></i> CERRAR CAJA
                    </a>
                }
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-secondary">
                        <tr>
                            <th class="ps-4">Hora</th>
                            <th>Concepto / Descripci칩n</th>
                            <th>Medio / Tipo</th>
                            <th class="text-end pe-4">Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mov in movimientos)
                        {
                            <tr>
                                <td class="ps-4 text-muted">@mov.Fecha.ToString("HH:mm") hs</td>
                                <td class="fw-medium">@mov.Concepto</td>
                                <td>
                                    @if (mov.Tipo == GestionVentas.Models.TipoMovimiento.Ingreso)
                                    {
                                        <span class="badge rounded-pill bg-success text-white px-3">Ingreso</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger text-white px-3">Egreso</span>
                                    }

                                    @* Los iconos han sido eliminados para una vista m치s limpia *@
                                </td>
                                <td
                                    class="text-end pe-4 fw-bold @(mov.Tipo == GestionVentas.Models.TipoMovimiento.Ingreso ? "text-success" : "text-danger")">
                                    @(mov.Tipo == GestionVentas.Models.TipoMovimiento.Ingreso ? "+" : "-") $
                                    @mov.Monto.ToString("N2")
                                </td>
                            </tr>
                        }
                        @if (!movimientos.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="fas fa-folder-open d-block mb-2 fs-2 opacity-25"></i> No hay movimientos
                                    registrados hoy.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalIngreso" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <form asp-action="NuevoMovimiento" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="tipo" value="Ingreso" />
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title fw-bold">REGISTRAR INGRESO MANUAL</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Monto</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light text-success fw-bold">$</span>
                            <input type="number" step="0.01" name="monto"
                                class="form-control border-success text-success fw-bold" placeholder="0.00" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Medio de Pago</label>
                        <select name="medioPago" class="form-select border-primary shadow-sm">
                            <option value="Efectivo">游눳 Efectivo</option>
                            <option value="Transferencia">游낁 Transferencia</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Concepto</label>
                        <input type="text" name="concepto" class="form-control" placeholder="Ej: Cobro por servicio"
                            required />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success px-4 fw-bold">GUARDAR</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEgreso" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <form asp-action="NuevoMovimiento" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="tipo" value="Egreso" />
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title fw-bold">REGISTRAR GASTO / SALIDA</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-danger">Monto de la Salida</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light text-danger fw-bold">$</span>
                            <input type="number" step="0.01" name="monto"
                                class="form-control border-danger text-danger fw-bold" placeholder="0.00" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Medio de Pago (De donde sale el dinero)</label>
                        <select name="medioPago" class="form-select border-primary shadow-sm">
                            <option value="Efectivo">游눳 Efectivo (Caj칩n)</option>
                            <option value="Transferencia">游낁 Transferencia (Cuenta)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Concepto / Motivo</label>
                        <input type="text" name="concepto" class="form-control" placeholder="Ej: Pago a proveedor"
                            required />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-danger px-4 fw-bold text-white">REGISTRAR GASTO</button>
                </div>
            </form>
        </div>
    </div>
</div>