@model dynamic
@{
    ViewData["Title"] = "Actualizar Precios Masivo";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-percent"></i> Actualizar Precios por Proveedor</h4>
        </div>
        <div class="card-body">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

           <form asp-action="ActualizarPrecios" asp-controller="Proveedores" method="post">
    <div class="row g-3">
        <div class="col-md-5">
            <label class="form-label">Seleccionar Proveedor</label>
            <select name="nombreProveedor" id="selectProveedor" class="form-select" required onchange="cargarVistaPrevia()">
                <option value="">-- Seleccione un proveedor --</option>
                @foreach (var p in ViewBag.Proveedores)
                {
                    <option value="@p.NombreProveedor">@p.NombreProveedor</option>
                }
            </select>
        </div>
        <div class="col-md-4">
    <label class="form-label">Porcentaje de Aumento</label>
    <div class="input-group" style="width: 130px;">
        <input type="number" 
               step="0.5" 
               name="porcentajeAumento" 
               id="inputPorcentaje" 
               class="form-control text-end" 
               placeholder="0" 
               oninput="simularPrecios()" 
               required />
        <span class="input-group-text">%</span>
    </div>
</div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('¿Está seguro?')">
                Aplicar Aumento
            </button>
        </div>
    </div>
</form>
            <hr />

            <div id="contenedorTabla" style="display:none;">
                <h5 class="mb-3 text-secondary">Vista previa de cambios:</h5>
                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-sm table-hover border">
                        <thead class="table-light sticky-top">
                            <tr>
                              <th>Código</th>
                              <th>Producto</th>
                              <th class="text-end">Costo Actual</th>
                              <th class="text-end text-primary">Costo Nuevo</th>
                              <th class="text-center text-muted">Recargo (%)</th> <th class="text-end">Venta Actual</th>
                              <th class="text-end text-success">Venta Nueva</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyVistaPrevia">
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let productosOriginales = [];

    function cargarVistaPrevia() {
        const prov = document.getElementById('selectProveedor').value;
        const contenedor = document.getElementById('contenedorTabla');
        const tbody = document.getElementById('tbodyVistaPrevia');

        if (!prov) {
            contenedor.style.display = 'none';
            return;
        }

        // Reutilizamos tu buscador mandando solo el proveedor
        fetch(`/Productos/Buscar?term=&proveedor=${encodeURIComponent(prov)}`)
            .then(response => response.json())
            .then(data => {
                productosOriginales = data;
                contenedor.style.display = 'block';
                simularPrecios(); // Renderizar tabla
            });
    }

   function simularPrecios() {
    const porcentaje = parseFloat(document.getElementById('inputPorcentaje').value) || 0;
    const factor = 1 + (porcentaje / 100);
    const tbody = document.getElementById('tbodyVistaPrevia');
    
    tbody.innerHTML = "";

    productosOriginales.forEach(p => {
        const costoNuevo = p.precioCosto * factor;
        const ventaNueva = costoNuevo * (1 + (p.recargoPorcentaje / 100));

        let fila = `
            <tr>
                <td><small class="text-muted">${p.codigo}</small></td>
                <td>${p.nombre}</td>
                <td class="text-end">$${p.precioCosto.toFixed(2)}</td>
                <td class="text-end fw-bold text-primary">$${costoNuevo.toFixed(2)}</td>
                <td class="text-center text-muted">${p.recargoPorcentaje}%</td> <td class="text-end">$${p.precioVenta.toFixed(2)}</td>
                <td class="text-end fw-bold text-success">$${ventaNueva.toFixed(2)}</td>
            </tr>`;
        tbody.innerHTML += fila;
    });
}
</script>
}