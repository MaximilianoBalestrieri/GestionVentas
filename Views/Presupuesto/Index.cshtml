@model List<Presupuesto>

@{
    ViewBag.Title = "Presupuestos";
}

<h2 class="mb-4">📋 Listado de Presupuestos</h2>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">➕ Nuevo Presupuesto</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Teléfono</th>
            <th>Fecha</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPresupuesto</td>
                <td>@p.NombreCliente</td>
                <td>@p.TelefonoCliente</td>
                <td>@p.Fecha.ToShortDateString()</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = p.IdPresupuesto })">👁 Ver</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = p.IdPresupuesto })">🗑 Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
