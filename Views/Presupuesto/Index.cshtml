@model List<Presupuesto>

@{
    ViewBag.Title = "Presupuestos";
}

<h2 class="mb-4">ğŸ“‹ Listado de Presupuestos</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a href="@Url.Action("Create")" class="btn btn-success">â• Nuevo Presupuesto</a>
    
    <div class="input-group w-50">
        <span class="input-group-text bg-light text-muted">ğŸ”</span>
        <input type="text" id="buscadorNombre" class="form-control" placeholder="Buscar cliente por nombre..." onkeyup="filtrarPresupuestos()" />
    </div>
</div>

<table class="table table-striped table-hover" id="tablaPresupuestos">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>TelÃ©fono</th>
            <th>Fecha</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr class="presupuesto-fila">
                <td>@p.IdPresupuesto</td>
                <td class="nombre-cliente">@p.NombreCliente</td>
                <td>@p.TelefonoCliente</td>
                <td>@p.Fecha.ToShortDateString()</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = p.IdPresupuesto })">ğŸ‘ Ver</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = p.IdPresupuesto })">ğŸ—‘ Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
<script>
    function filtrarPresupuestos() {
        const busqueda = document.getElementById("buscadorNombre").value.toLowerCase();
        const filas = document.querySelectorAll(".presupuesto-fila");

        filas.forEach(fila => {
            const nombre = fila.querySelector(".nombre-cliente").textContent.toLowerCase();
            // Si el nombre incluye lo que escribimos, se muestra, si no, se oculta
            if (nombre.includes(busqueda)) {
                fila.style.display = "";
            } else {
                fila.style.display = "none";
            }
        });
    }
</script>
}