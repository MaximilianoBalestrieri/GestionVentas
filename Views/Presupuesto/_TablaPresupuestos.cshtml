@model List<Presupuesto>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Teléfono</th>
            <th>Fecha</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPresupuesto</td>
                <td>@p.NombreCliente</td>
                <td>@p.TelefonoCliente</td>
                <td>@p.Fecha.ToShortDateString()</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = p.IdPresupuesto })">👁 Ver</a>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = p.IdPresupuesto })">✏️ Editar</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = p.IdPresupuesto })">🗑 Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages != null)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Buscar", new { page = i, search = ViewBag.CurrentFilter })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
