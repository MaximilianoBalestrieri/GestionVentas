@model IEnumerable<GestionVentas.Models.Cliente>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-person-vcard me-2"></i>Deudores en Cuenta Corriente</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Cliente</th>
                            <th>Teléfono</th>
                            <th>Saldo Deudor</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.NombreCliente</td>
                                <td>@item.TelefonoCliente</td>
                                <td class="text-danger fw-bold fs-5">$ @item.SaldoActual.ToString("N2")</td>
                                <td class="text-center">
                                    <button class="btn btn-success btn-sm" onclick="abrirModalCobro(@item.IdCliente, '@item.NombreCliente', @item.SaldoActual)">
                                        <i class="bi bi-cash-coin"></i> Registrar Pago
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCobro" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-primary border-2">
            <form asp-action="CobrarDeuda" method="post">
                <div class="modal-header bg-primary text-white py-2">
                    <h5 class="modal-title">Registrar Pago</h5>
                </div>
                <div class="modal-body text-center">
                    <input type="hidden" name="idCliente" id="idCliCobro" />
                    <p class="mb-1 small">Cliente: <strong id="nombreCliCobro"></strong></p>
                    <h4 class="text-danger mb-3">Debe: $<span id="saldoCliCobro"></span></h4>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">¿Cuánto paga?</label>
                        <input type="number" step="0.01" name="montoPagado" class="form-control form-control-lg text-center fw-bold" required />
                    </div>

                    <div class="mb-2">
                        <label class="form-label small fw-bold">Medio de Pago:</label>
                        <select name="medioPago" class="form-select form-select-sm">
                            <option value="Efectivo">Efectivo</option>
                            <option value="Transferencia">Transferencia</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary btn-sm px-4">Confirmar Pago</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function abrirModalCobro(id, nombre, saldo) {
            document.getElementById('idCliCobro').value = id;
            document.getElementById('nombreCliCobro').innerText = nombre;
            document.getElementById('saldoCliCobro').innerText = saldo.toLocaleString('es-AR');
            new bootstrap.Modal(document.getElementById('modalCobro')).show();
        }
    </script>
}