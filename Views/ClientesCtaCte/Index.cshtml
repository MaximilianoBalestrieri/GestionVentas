@model IEnumerable<GestionVentas.Models.Cliente>
@{
    ViewData["Title"] = "Deudores Cta. Cte.";
}

<div class="container mt-4">
    @* --- ALERTAS DE CAJA Y COBRO --- *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center p-3">
            <h4 class="mb-0"><i class="bi bi-person-vcard me-2"></i>Deudores en Cuenta Corriente</h4>
            <div>
                <button type="button" class="btn btn-primary btn-sm" onclick="abrirModalBusquedaClientes()">
                    <i class="bi bi-person-plus-fill"></i> Agregar Cliente a Libreta
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Cliente</th>
                            <th>Teléfono</th>
                            <th>Saldo Deudor</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold ps-3">@item.NombreCliente</td>
                                    <td>@(string.IsNullOrEmpty(item.TelefonoCliente) ? "Sin teléfono" : item.TelefonoCliente)
                                    </td>

                                    <td class="@(item.SaldoActual < 0 ? "text-success" : "text-danger") fw-bold fs-5">
                                        $ @item.SaldoActual.ToString("N2")
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("Index", "CtaCte", new { idCliente = item.IdCliente })"
                                               class="btn btn-outline-dark btn-sm me-1">
                                            <i class="bi bi-eye"></i> Detalle
                                        </a>
                                        <button class="btn btn-success btn-sm"
                                                onclick="abrirModalCobro(@item.IdCliente, '@item.NombreCliente', @item.SaldoActual.ToString().Replace(",", "."))">
                                            <i class="bi bi-cash-coin"></i> Registrar Pago
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    No hay clientes con deuda pendiente.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* --- MODAL PARA BUSCAR Y AGREGAR CLIENTE --- *@
<div class="modal fade" id="modalBusquedaClientes" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Seleccionar Cliente para Cta. Cte.</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-sm table-hover" id="tablaClientesGenerales">
                        <thead class="table-secondary">
                            <tr>
                                <th>Nombre</th>
                                <th>Teléfono</th>
                                <th class="text-end">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.TodosLosClientes != null)
                            {
                                foreach (var c in (IEnumerable<GestionVentas.Models.Cliente>)ViewBag.TodosLosClientes)
                                {
                                    <tr>
                                        <td>@c.NombreCliente</td>
                                        <td>@c.TelefonoCliente</td>
                                        <td class="text-end">
                                            <form asp-action="HabilitarCtaCte" method="post" style="display:inline;">
                                                <input type="hidden" name="idClienteOriginal" value="@c.IdCliente" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-plus-lg"></i> Agregar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@* --- MODAL DE COBRO (ESTE ES EL QUE FALTABA) --- *@
<div class="modal fade" id="modalCobro" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-cash-coin me-2"></i>Registrar Pago de Cliente</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            @* Apunta a tu método CobrarDeuda del controlador *@
            <form asp-action="CobrarDeuda" method="post">
                <div class="modal-body">
                    <input type="hidden" name="idCliente" id="idCliCobro" />

                    <div class="text-center mb-4">
                        <h4 id="nombreCliCobro" class="text-primary mb-1"></h4>
                        <div class="badge bg-light text-danger fs-6 border border-danger">
                            Deuda: $ <span id="saldoCliCobro"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Monto a Entregar:</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-success text-white">$</span>
                            <input type="number" step="any" name="montoPagado" id="inputMonto"
                                   class="form-control fw-bold text-success border-success" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Medio de Pago:</label>
                        <select name="medioPago" class="form-select form-select-lg">
                            <option value="Efectivo">Efectivo</option>
                            <option value="Transferencia">Transferencia</option>
                            <option value="Mercado Pago">Mercado Pago</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success px-4 fw-bold">
                        <i class="bi bi-check-lg"></i> CONFIRMAR PAGO
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            function abrirModalBusquedaClientes() {
                var myModal = new bootstrap.Modal(document.getElementById('modalBusquedaClientes'));
                myModal.show();
            }

            function abrirModalCobro(id, nombre, saldo) {
                // Asignar datos al modal
                document.getElementById('idCliCobro').value = id;
                document.getElementById('nombreCliCobro').innerText = nombre;
                document.getElementById('saldoCliCobro').innerText = saldo.toLocaleString('es-AR', { minimumFractionDigits: 2 });

                // Sugerir el pago total
                document.getElementById('inputMonto').value = saldo;

                // Abrir modal
                var miModal = new bootstrap.Modal(document.getElementById('modalCobro'));
                miModal.show();

                // Foco automático en el monto
                setTimeout(() => {
                    const input = document.getElementById('inputMonto');
                    input.focus();
                    input.select();
                }, 500);
            }
    </script>
}