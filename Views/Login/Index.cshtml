@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="login-container">
    <div class="login-card">
        <div class="login-image">
          <img src="@Url.Content("~/imagenes/usuarios/loginUsuarios.jpg")" alt="Imagen" width="280px" />

        </div>
        <div class="login-divider"></div>

        <div class="login-form">
            <div style="background-color: #d9534f; color: white; padding: 8px; border-radius: 8px; text-align: center; font-weight: bold; margin-bottom: 15px; text-transform: uppercase; font-size: 0.85em; letter-spacing: 1px;">
                <i class="bi bi-exclamation-triangle-fill"></i> Solo personal autorizado
            </div>
            <h1>Sistema Gestión de Ventas </h1>
            <h2>Bienvenido</h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert">@ViewBag.Error</div>
            }

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    @Html.TextBox("usuario", ViewBag.Usuario as string, new { @class = "form-control", placeholder = "Tu usuario", required = "required", id = "usuario" })
                </div>

                <div class="form-group">
                    <label for="contraseña">Contraseña</label>
                    @Html.Password("contraseña", null, new { @class = "form-control", placeholder = "Tu contraseña", required = "required", id = "contraseña" })
                </div>

               
    <div style="display: flex; gap: 10px; margin-top: 15px; align-items: stretch;">
    <button type="submit" style="flex: 2; height: 45px; margin: 0; padding: 0 20px; cursor: pointer;">
        Ingresar
    </button>
    
    <a href="@Url.Action("Inicio", "Home")" 
       style="flex: 1; height: 45px; background-color: #6c757d; color: white; text-decoration: none; 
              border-radius: 4px; text-align: center; font-size: 0.9em; border: none;
              display: flex; align-items: center; justify-content: center; margin: 0;">
        Cancelar
    </a>
</div>
            }

            
        </div>
    </div>
</div>
